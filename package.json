{
  "name": "isvalid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "parcel ./src/index.html",
    "prebuild": "npm run clean",
    "build": "parcel build ./src/index.html --no-source-maps",
    "clean": "rimraf ./dist",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/*.(ts|js)"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "concurrently": "^5.3.0",
    "jest": "^26.4.1",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  }
}
